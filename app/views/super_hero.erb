    </div>
    <br>
    <div>
        <label for="member2_power" class="team-form">Power</label>
        <input id="member2_power" type="text" name="team[members][][power]">
    </div>
    <br>
    <div>
        <label for="member2_bio" class="team-form">Bio</label>
        <textarea id="member2_bio" type="text" name="team[members][][bio]"></textarea>
    </div>

