<h1>Create a Team and Heroes!</h1>

<form method="post" action="/teams">
    <h2>New Team</h2>
    <div>
        <label for="team_name" class="team-form">Name</label>
        <input id="team_name" type="text" name="team[name]">
    </div>
    <br>
    <div>
        <label for="team_motto" class="team-form">Motto</label>
        <textarea id="team_motto" type="text" name="team[motto]"></textarea>
    </div>
    <br>
    <h2>Team Members</h2>
    <h3>First Super Hero</h3>
    <div>
        <label for="member1_name" class="team-form">Name</label>
        <input id="member1_name" type="text" name="team[members][][name]">
    </div>
    <br>
    <div>
        <label for="member1_power" class="team-form">Power</label>
        <input id="member1_power" type="text" name="team[members][][power]">
    </div>
    <br>
    <div>
        <label for="member1_bio" class="team-form">Bio</label>
        <textarea id="member1_bio" type="text" name="team[members][][bio]"></textarea>
    </div>
