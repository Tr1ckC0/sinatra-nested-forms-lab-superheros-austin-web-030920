        <label for="member3_name" class="team-form">Name</label>
        <input id="member3_name" type="text" name="team[members][][name]">
    </div>
    <br>
    <div>
        <label for="member3_power" class="team-form">Power</label>
        <input id="member3_power" type="text" name="team[members][][power]">
    </div>
    <br>
    <div>
